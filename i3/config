# Sound on launch.
# No sound from application? Launch pavucontrol and check the apps output.

# start jack with audiofuse as master
exec --no-startup-id "jackd -R -P98 -dalsa -dhw:'AudioFuse,0' -r48000 -i8 -o8 -n3 -p64"
# bridge pulseaudio, sleep to wait for jackd
exec --no-startup-id "sleep 1 && pacmd load-module module-jack-source channels=2; pacmd load-module module-jack-sink channels=2"
# bridge midi devices, sleep to wait for jackd
exec --no-startup-id "sleep 1 && a2j_control --ehw; a2j_control --start"

bindsym $mod+shift+s mode "$mode_sound"
set $mode_sound (a)udiofuse, (c)onnect, (f)luidsynth, (h)elix, (k)ill all sound, (m)idi, bridge (p)ulseaudio, (r)eaper, pa(v)ucontrol
mode "$mode_sound" {
  bindsym r exec $HOME/bin/reaper.sh, mode "default"
  # control what goes to jack
  bindsym v exec --no-startup-id "pavucontrol", mode "default"
  # kill all sound
  bindsym k exec --no-startup-id killall -q pulseaudio jackd jackdbus a2jmidid, mode "default"
  # start jack with audiofuse as master
  bindsym a exec --no-startup-id "jackd -R -P98 -dalsa -dhw:'AudioFuse,0' -r48000 -i8 -o8 -n3 -p64", mode "default"
  # start jack with line 6 helix as master
  bindsym h exec --no-startup-id "jackd -R -P98 -dalsa -dhw:'HELIX,0' -r48000 -i8 -o8 -n3 -p128", mode "default"
  # bridge audiofuse interface ins and outs
  bindsym i exec --no-startup-id "alsa_in -jaudiofuse-in -dhw:AudioFuse,0 -r48000 -c8 -n3 -p128", mode "default"
  bindsym o exec --no-startup-id "alsa_out -jaudiofuse-out -dhw:AudioFuse,0 -r48000 -c8 -n3 -p128", mode "default"
  # bridge pulseaudio
  bindsym p exec --no-startup-id "pacmd load-module module-jack-source channels=2; pacmd load-module module-jack-sink channels=2", mode "default"
  # made with jack_lsp -c
  bindsym c exec --no-startup-id "jack_connect system:capture_1 REAPER:in1;\
    jack_connect system:capture_2 REAPER:in2;\
    jack_connect system:capture_7 REAPER:in7;\
    jack_connect system:capture_8 REAPER:in8;\
    jack_connect 'PulseAudio JACK Sink:front-left' audiofuse-out:playback_1;\
    jack_connect 'PulseAudio JACK Sink:front-right' audiofuse-out:playback_2;\
    jack_connect audiofuse-in:capture_2 REAPER:in3;\
    jack_connect audiofuse-out:playback_1 'PulseAudio JACK Sink:front-left';\
    jack_connect audiofuse-out:playback_2 'PulseAudio JACK Sink:front-right';\
    jack_connect audiofuse-out:playback_1 REAPER:out1;\
    jack_connect audiofuse-out:playback_2 REAPER:out2;\
    jack_connect 'a2j:A-Series Keyboard [24] (capture): A-Series Keyboard Keyboard' 'REAPER:MIDI Input 1';\
    jack_connect REAPER:out1 audiofuse-out:playback_1;\
    jack_connect REAPER:out2 audiofuse-out:playback_2;\
    jack_connect REAPER:out1 system:playback_1;\
    jack_connect REAPER:out2 system:playback_2;\
    jack_connect 'a2j:A-Series Keyboard [24] (capture): A-Series Keyboard Keyboard' 'a2j:fluidsynth-in [129] (playback): fluidsynth-in';\
    jack_connect fluidsynth:left system:playback_7;\
    jack_connect fluidsynth:right system:playback_8;\
    jack_connect 'REAPER:MIDI Output 1' 'a2j:fluidsynth-in [129] (playback): fluidsynth-in'", mode "default"
  # bridge midi devices, so midi keyboard shows up
  bindsym m exec --no-startup-id "a2j_control --ehw; a2j_control --start", mode "default"
  # start fluidsynth with a nice sound font
  bindsym f exec --no-startup-id urxvt -e fluidsynth -a jack 'Recording/SoundFonts/Timbres Of Heaven GM_GS_XG_SFX V 3.4 Final.sf2' -r 48000 -p fluidsynth-in
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

