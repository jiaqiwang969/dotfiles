# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set color theme
bindsym $mod+w exec "wal -i $HOME/Documents/Backgrounds/Flat -o wal-set; bin/update-conkyrc.sh";
exec --no-startup-id "wal -i $HOME/Documents/Backgrounds/Flat -o wal-set"
