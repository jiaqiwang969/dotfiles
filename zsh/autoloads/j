# jump around like z
unfunction j

case $(uname) in
  Linux)
    [[ -s /home/torgeir/.autojump/etc/profile.d/autojump.sh ]] \
      && source /home/torgeir/.autojump/etc/profile.d/autojump.sh
    [[ -f /etc/profiles/per-user/torgeir/share/zsh/site-functions/autojump.zsh ]] \
      && source /etc/profiles/per-user/torgeir/share/zsh/site-functions/autojump.zsh
    ;;
  Darwin)
    [[ -s /usr/local/share/autojump/autojump.zsh ]] \
      && source /usr/local/share/autojump/autojump.zsh
    [[ -f /etc/profiles/per-user/torgeir/share/zsh/site-functions/autojump.zsh ]] \
      && source /etc/profiles/per-user/torgeir/share/zsh/site-functions/autojump.zsh
    ;;
esac

j "$@"
